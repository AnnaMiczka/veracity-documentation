{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"description": "Table-of-Content file for documentation subsection",
	"additionalProperties": false,
	"definitions": {
		"leafItem": {
			"description": "A single link without any children",
			"type": "object",
			"additionalProperties": false,
			"required": [
				"text",
				"href"
			],
			"properties": {
				"text": {
					"type": "string"
				},
				"href": {
					"type": "string"
				},
				"openAPI": {
					"type": "boolean",
					"description": "If true AND the href points to a yaml file treats the endpoint as an OpenAPI specification and loads UI to view it.",
					"default": false
				}
			}
		},
		"parentItem": {
			"description": "A link in the table-of-contents that must contain at least one child.",
			"type": "object",
			"additionalProperties": false,
			"required": [
				"text",
				"items"
			],
			"properties": {
				"text": {
					"type": "string"
				},
				"href": {
					"type": "string"
				},
				"items": {
					"description": "Add one or more items to the table of content below this item.",
					"type": "array",
					"items": {
						"minItems": 1,
						"anyOf": [
							{ "$ref": "#/definitions/parentItem" },
							{ "$ref": "#/definitions/leafItem" }
						]
					}
				}
			}
		}
	},
	"properties": {
		"$schema": {
			"type": "string"
		},
		"items": {
			"description": "Add one or more items to the table of contents.",
			"type": "array",
			"items": {
				"minItems": 1,
				"anyOf": [
					{ "$ref": "#/definitions/parentItem" },
					{ "$ref": "#/definitions/leafItem" }
				]
			}
		}
	}
}